.modal
  display: none
  align-items: center
  justify-content: center
  position: fixed
  top: -100vh
  bottom: -100vh
  right: -100vw
  left: -100vw
  background: rgba(0, 0, 0, 0.5)

.modal--open
  display: flex

.modal__content-wrap
  background: white

.modal__content-wrap--sticker
  background: url('../../../assets/sticker.png')
  background-size: cover

@media(min-width: 720px)
  @media(min-height: 600px)
    .modal__content-wrap
      padding: 15px